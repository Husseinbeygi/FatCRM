  </mime-type>
  <mime-type type="application/x-vnd.kdab.crm.lead">
    <sub-class-of type="text/xml"/>
    <comment>CRM Lead</comment>
  </mime-type>
  <mime-type type="application/x-vnd.kdab.crm.note">
    <sub-class-of type="text/xml"/>
    <comment>CRM Note</comment>
  </mime-type>
  <mime-type type="application/x-vnd.kdab.crm.opportunity">
    <sub-class-of type="text/xml"/>
    <comment>CRM Opportunity</comment>
  </mime-type>
  <mime-type type="application/x-vnd.kdab.crm.document">
    <sub-class-of type="text/xml"/>
    <comment>CRM Document</comment>
  </mime-type>
  <mime-type type="application/x-vnd.kdab.crm.contacts_csv">
